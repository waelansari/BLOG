<%-include('partials/header.ejs', {title: 'Home', user: user}) %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        .content-container {
            position: relative;
            height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #232222;
            padding: 20px;
            z-index: 1;
        }
        .content-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://media.licdn.com/dms/image/v2/C4D12AQG4Ad-HieTfLA/article-cover_image-shrink_720_1280/article-cover_image-shrink_720_1280/0/1548694067534?e=1746662400&v=beta&t=9idx6MTUqY82Ku3HcuuySNIrMdAStaClX7PnylMTpH0') center/cover no-repeat, rgba(255, 255, 255, 0.5);
            opacity: 0.5;
            background-blend-mode: lighten;
            z-index: -1;
        }
        .text-container {
            height: 450px;
            width: 600px;
            padding: 30px;
            border-radius: 10px;
        }
        p {
            font-weight: 600; /* Increased font weight for paragraphs */
        }
        a {
            transition: color 0.3s ease, width 0.3s ease;
        }
        a:hover {
            color: #FFD700; /* Gold hover color for links */
        }
        .d-grid a {
            width: 200px; /* Reduced width for the buttons */
            margin: auto;
        }
        .btn-custom{
        background-color: black; /* Sets background color to black */
        color: white; /* Sets text color to white for visibility */
        font-weight: bold; /* Adjusts text weight */
        padding: 7px 20px; /* Optional: Adds padding for better button look */
        border: none; /* Removes borders, if any */
        text-decoration: none; /* Ensures no underline */
        display: inline-block; /* Makes it behave like a button */
        text-align: center; /* Centers the text */
    }
    .btn-custom:hover {
        background-color: gray; /* Adds hover effect */
        color: black; /* Changes text color on hover */
    }
    </style>
</head>
<body>
    <div class="content-container">
        <div class="text-container text-center">
            <% if (user) { %>
                <h1 class="mb-4 text-white">Welcome to Blogi.Blog</h1>
                <p class="mb-4">A place to share your thoughts and ideas</p>
                <p class="mb-4">Hello, Welcome back <strong><%= user.username %></strong>!</p>
                <a href="/profile" class="btn btn-primary">
                    <i class="fas fa-user"></i> View Profile
                </a>
                <a href="/posts/add" class="btn btn-custom">
                    <i class="fas fa-plus"></i> Create Post
                </a>
            <% } else { %>
                <h1 class="mb-4 text-white">Welcome to Blogi.Blog</h1>
                <h3 class="mb-4">Your Go-To Destination for Inspiring Stories and Insights!</h3>
                <p class="mb-4">
                    At Blogi.Blog, we believe that every story has the power to inspire, educate, and connect.
                    Join our community of curious minds and lifelong learners to explore fresh ideas,
                    share valuable knowledge, and spark meaningful conversations!
                </p>
                <div class="d-grid gap-3">
                    
                    <a href="/auth/login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                </div>
            <% } %>
        </div>
    </div>
    <%-include('partials/footer.ejs') %>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+0I6qLPpcm61R+e9Cd3aLq2g7Egwf" crossorigin="anonymous"></script>
</body>
</html>
